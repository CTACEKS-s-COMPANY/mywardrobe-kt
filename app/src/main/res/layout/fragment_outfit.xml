<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginPageBackgroundColor"
    tools:context=".screens.main.tabs.creating_outfit.OutfitFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/swapButton"
        style="@style/Widget.Button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/swap_button"
        app:layout_constraintBottom_toBottomOf="@+id/matchTwoColorButton"
        app:layout_constraintStart_toStartOf="@+id/CollorViewTop"
        app:layout_constraintTop_toTopOf="@+id/matchTwoColorButton"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/CollorViewBottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/matchThreeColorButton"
        app:layout_constraintEnd_toStartOf="@+id/matchThreeColorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CollorViewMiddle"
        app:layout_constraintTop_toTopOf="@+id/matchThreeColorButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/matchThreeColorButton"
        style="@style/Widget.Button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="96dp"
        android:text="@string/create_outlook_3_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CollorViewBottom" />

    <View
        android:id="@+id/CollorViewMiddle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/CollorViewBottom"
        app:layout_constraintEnd_toStartOf="@+id/CollorViewBottom"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CollorViewTop"
        app:layout_constraintTop_toTopOf="@+id/CollorViewBottom" />

    <View
        android:id="@+id/CollorViewTop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/CollorViewMiddle"
        app:layout_constraintEnd_toStartOf="@+id/CollorViewMiddle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CollorViewMiddle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/matchTwoColorButton"
        style="@style/Widget.Button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/create_outlook_2_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/matchThreeColorButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/matchThreeColorButton"
        app:layout_constraintTop_toBottomOf="@+id/matchThreeColorButton"
        app:layout_constraintVertical_bias="0.555" />

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBottom"
        android:layout_width="151dp"
        android:layout_height="134dp"
        android:src="@drawable/pngwing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMiddle" />

    <ImageView
        android:id="@+id/imageViewMiddle"
        android:layout_width="168dp"
        android:layout_height="160dp"
        android:src="@drawable/premium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:text="@string/primary_colors_text"
        app:layout_constraintBottom_toTopOf="@+id/CollorViewTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />


</androidx.constraintlayout.widget.ConstraintLayout>